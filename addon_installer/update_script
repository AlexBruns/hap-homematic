#!/bin/sh

ADDONNAME=hap-homematic
CONFIG_DIR=/usr/local/etc/config
ADDON_DIR=/usr/local/addons/${ADDONNAME}
RCD_DIR=${CONFIG_DIR}/rc.d

# make sure this addon is only executed on
# supported platforms

if [ "$1" == "HM-RASPBERRYMATIC" ]  || [ "$1" == "CCU3" ] ; then

mount | grep /usr/local 2>&1 >/dev/null
if [ $? -eq 1 ]; then
  mount /usr/local
fi

# create necessary directories
mkdir -p ${ADDON_DIR}
chmod 755 ${ADDON_DIR}
mkdir -p ${RCD_DIR}
chmod 755 ${RCD_DIR}

# copy addon
mkdir -p ${ADDON_DIR}/etc
mkdir -p ${CONFIG_DIR}/hap-homematic

#create the www stuff
mkdir -p /usr/local/etc/config/addons/www/${ADDONNAME}
cp -af hap/etc/www/index.html /usr/local/etc/config/addons/www/${ADDONNAME}
cp -af hap/etc/www/update-check.cgi /usr/local/etc/config/addons/www/${ADDONNAME}

# copy startup script
cp -af rc.d/* ${RCD_DIR}

#build system launcher
chmod +x ${RCD_DIR}/hap-homematic
chmod +x /usr/local/etc/config/addons/www/${ADDONNAME}/update-check.cgi

mount -o remount,rw /
mkdir -p /usr/local/addons/npm/
#create new .npm cause /root/.npm is not writable
echo "cache=/usr/local/addons/npm/.npm" > /root/.npmrc
echo "init-module=/usr/local/addons/npm/.npm-init.js" >> /root/.npmrc
echo "userconfig=/usr/local/addons/npm/.npmrc" >> /root/.npmrc
echo "path=/usr/local/addons/npm/.npm" >> /root/.npmrc
mount -o remount,ro /


cd ${ADDON_DIR}
npm install hap-homematic

#create the button in system control
node /usr/local/addons/hap-homematic/node_modules/hap-homematic/etc/hm_addon.js hap /usr/local/addons/hap-homematic/node_modules/hap-homematic/etc/hap_addon.cfg

#run this
${RCD_DIR}/hap-homematic start

fi

sync
exit 0